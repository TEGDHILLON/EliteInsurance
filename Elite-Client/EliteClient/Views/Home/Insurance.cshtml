@{
    ViewData["Title"] = "Insurance Page";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Home">Elite</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Insurance">Insurance</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">LogOut</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


<div class="panel panel-default">
    <div class="panel-body">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <i class="icon-calendar"></i>
                    <h3 class="panel-title">Delete/Update Insurance</h3>
                </div>
                <div class="panel-body">
                    <div class="col-sm-12">
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="insurance_dropdown">Insurance</label>
                                    <select class="form-control" id="insurance_dropdown" onchange="dashboard.getById();">
                                        <option value="0">Select Insurance</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="make">Make</label>
                                    <input type="text" readonly="readonly" class="form-control" id="make" placeholder="make">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="model">Model</label>
                                    <input type="text" readonly="readonly" class="form-control" id="model" placeholder="model">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="company">Company</label>
                                    <input type="text" readonly="readonly" class="form-control" id="company" placeholder="company">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="phone">Phone</label>
                                    <input type="text" class="form-control" id="phone" placeholder="Phone">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="amount">Amount</label>
                                    <input type="text" class="form-control" id="amount" placeholder="Amount">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="annualFee">Annual Fee</label>
                                    <input type="number" class="form-control" id="annualFee" placeholder="Annual Fee">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="note">Note</label>
                                    <input type="text" class="form-control" id="note" placeholder="Note">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="btn_update_project"><br></label>
                                    <button type="button" class="btn btn-primary form-control" id="btn_update">Update</button>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="btn_update_project"><br></label>
                                    <button type="button" class="btn btn-danger btn-block" id="btn_delete">Delete</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/js/dashboard.js"></script>
}